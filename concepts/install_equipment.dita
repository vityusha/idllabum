<concept id="install_equipment" xml:lang="en-US">
  <title>Equipment installation</title>

  <conbody>
    
    <fig id="install_hw_png">
        <title>Connections diagram</title>
        <image href="img/install_hw.png" placement="break">
            <alt>Connections diagram</alt>
        </image>
    </fig>
    <p>On this diagram:</p>
		<table frame="topbot">
            <tgroup cols="2">
                <colspec colname="COLSPEC0" colwidth="10*"/>
                <colspec colname="COLSPEC1" colwidth="120*"/>
                <tbody>
                    <row>
                        <entry>1</entry>
                        <entry>Audio hub</entry>
                    </row>
					<row>
                        <entry>2</entry>
